<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cubematrixsystems.obscuraplus">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.">

        <activity
            android:name="com.cubematrixsystems.obscuraplus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cubematrixsystems.obscuraplus.PictureDetailsActivity"
            android:label="@string/title_activity_picture_details"
            android:parentActivityName="com.cubematrixsystems.obscuraplus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cubematrixsystems.obscuraplus.MainActivity" />
        </activity>

    </application>

</manifest>
